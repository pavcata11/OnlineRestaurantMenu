@using OnlineRestaurantMenu.Models;
@model IEnumerable<FoodModel>
@{
    ViewData["Title"] = "Всички храни";
    Pager pager = new Pager();
    int pageNo = 0;
    int rows = 1;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}



<div class="container">
    @Html.ActionLink("Добавяне на храна", "AddFood")
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Категория</th>
                <th scope="col">Име</th>
                <th scope="col">Описание</th>
                <th scope="col">Цена</th>
                <th scope="col">Размер</th>
                <th scope="col">Калории</th>
                <th scope="col">Снимка</th>
                <th scope="col">Време за приготвяне</th>
                <th scope="col">Редактиране</th>
                <th scope="col">Изтриване</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@rows</th>
                    <td>@item.TypeId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price лв.</td>
                    <td>@item.Size мл.</td>
                    <td>@item.Calories kcal</td>
                    <td>@item.Image</td>
                    <td>@item.TimeToGet</td>

                    <td>
                        @Html.ActionLink("Редактиране", "EditFood", new { Id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Изтриване", "RemoveFood", new { Id = item.Id })
                    </td>
                </tr>
                rows++;
            }



        </tbody>
    </table>

</div>





<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item" @(pge==pager.CurrentPage?"active":"")>
                    <a class="page-link" asp-controller="Product" asp-action="AllDrinks" asp-route-pg="@pge">@pge</a>
                </li>
            }

        </ul>
    }

</div>




