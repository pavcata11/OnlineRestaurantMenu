@using OnlineRestaurantMenu.Models.User;
@model UserModel
@{
    ViewData["Title"] = "Редактиране на потребител";
}


<div class="row  justify-content-center">
    <div class="col-lg-8">
        <h2 class="fw-bold mb-5 text-center">@ViewData["Title"]</h2>


        <form method="post">
            <div class="row px-5">
                <div class="col-md-12 mb-4">
                    <div class=" mb-1 ">
                        <label class="form-label text-black" asp-for="@Model.FirstName">Име</label>
                        <input class="form-control" autocomplete="firstname" aria-required="true" asp-for="@Model.FirstName" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row px-5">
                <div class="col-md-12 mb-4">
                    <div class=" mb-1 ">
                        <label class="form-label text-black" asp-for="@Model.LastName">Фамилия</label>
                        <input class="form-control" autocomplete="lastname" aria-required="true" rows="5" asp-for="@Model.LastName"/>
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row px-5">
                <div class="col-md-12 mb-4">
                    <div class=" mb-1 ">
                        <label class="form-label text-black" asp-for="@Model.Username">Потребителско име</label>
                        <input class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Username" />
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row px-5">
                <div class="col-md-12 mb-4">
                    <div class=" mb-1 ">
                        <label class="form-label text-black" asp-for="@Model.Email">Имейл</label>
                        <input class="form-control" autocomplete="email" aria-required="true" asp-for="@Model.Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row px-5">
                <div class="col-md-12 mb-4">
                    <div class=" mb-1 ">
                        <label asp-for="@Model.Role.Id" class="form-label">Тип роля</label>
                        <select asp-for="@Model.Role.Id" class="form-control">
                            @foreach (var type in Model.Roles)
                            {
                                <option value="@type.Id">@type.Name</option>
                            }
                        </select>
                       @* <span asp-validation-for="RoelId" class="text-danger"></span>*@
                    </div>
                </div>
            </div>


            <div class="row px-5">
                <div class="col-md-12 mb-4">
                    <div class=" mb-1 ">
                        <input class="btn btn-primary" type="submit" value="Редактиране на потребител" />

                    </div>
                </div>
            </div>
        </form>


    </div>
</div>




