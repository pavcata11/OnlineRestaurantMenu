<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Watchlist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Watchlist.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg  navbar-scroll">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://i.postimg.cc/D0hC5JbG/LOGO12-removebg-preview.png" alt="Logo" style="width:50px;">
                </a>
                <button class="navbar-toggler" style="color:orange" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    Меню
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:orange" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                               
                                   <div class="dropdown" style="float:right;">
                                    <a class="dropbtn nav-link" style="color:orange">Административни опции</a>
                                              <div class="dropdown-content">
                                        <a asp-area="" asp-controller="Product" asp-action="AllDrinks">Напитки</a>
                                                <a href="#">Добавяне храна</a>
                                                <a href="#">Добавяне сервитьор/ка</a>
                                          </div>
                                    </div>
                             </li>
                             <li class="nav-item">
                               
                                   <div class="dropdown" style="float:right;">
                                    <a class="dropbtn nav-link" style="color:orange">Сервитьор опции</a>
                                              <div class="dropdown-content">
                                        <a asp-area="" asp-controller="Product" asp-action="AllDrinks">Текущи поръчки</a>
                                                <a href="#">Добавяне храна</a>
                                                <a href="#">Добавяне сервитьор/ка</a>
                                          </div>
                                    </div>
                             </li>
      
                         }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
               
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            © 2022 Copyright: P. Ivanchev
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/carousel.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>